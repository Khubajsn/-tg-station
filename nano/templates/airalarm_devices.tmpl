<div class="item">
    <div class="itemLabel">Air Scrubbers</div>
    <div class="itemContent marginBottom">
        {^{for devices.scrubbers}}
        <div data-link="class{:power ? 'good' : 'average'}">{^{:name}}</div>
        {{else}}
        none
        {{/for}}
    </div>
        
    <div class="itemLabel">Vents</div>
    <div class="itemContent">
        {^{for devices.vents}}
        <div data-link="class{:power ? 'good' : 'average'}">{^{:name}}</div>
        {{else}}
        none
        {{/for}}
</div>
